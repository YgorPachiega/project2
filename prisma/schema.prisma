generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresas {
  id        String  @id @default(uuid())
  nome      String
  cnpj      String  @unique
  endereco  String?
  setor     String?
  telefone  String?
  users     Users[]
  eventos   Eventos[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Users {
  id               String    @id @default(uuid())
  nome             String
  email            String    @unique
  auth0Id          String    @unique
  tipoUsuario      String
  aprovado         Boolean   @default(false)
  empresaId        String
  empresa          Empresas  @relation(fields: [empresaId], references: [id])
  participantes    Participantes[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Eventos {
  id          String    @id @default(uuid())
  nome        String
  descricao   String?
  dataInicio  DateTime
  dataFim     DateTime
  local       String?
  empresaId   String
  empresa     Empresas  @relation(fields: [empresaId], references: [id])
  checkins    Checkin[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Participantes {
  id            String    @id @default(uuid())
  nome          String
  cpf           String    @unique
  empresa       String
  solicitanteId String
  solicitante   Users     @relation(fields: [solicitanteId], references: [id])
  checkins      Checkin[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Checkin {
  id              String        @id @default(uuid())
  entrada         DateTime
  saida           DateTime?
  participanteId  String
  eventoId        String
  participante    Participantes @relation(fields: [participanteId], references: [id])
  evento          Eventos       @relation(fields: [eventoId], references: [id])
  observacao      String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}
