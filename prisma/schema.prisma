generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  auth0Id         String    @unique
  tipoUsuario     String    @default("prestador")
  empresaRelacionada String?   // Nome da empresa para prestadores
  aprovado        Boolean   @default(false)
  empresa         empresas? // Opcional, pois nem todo usuário é uma empresa
  empresaId       Int?      @unique
}

model empresas {
  id              Int       @id @default(autoincrement())
  userId          Int       @unique
  nome            String    @db.VarChar(255)
  cnpj            String    @unique @db.VarChar(14)
  endereco        String?   @db.VarChar(255)
  setor           String?   @db.VarChar(100)
  telefone        String?   @db.VarChar(20)
  user            users     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clients {
  id        String   @unique
  nome      String
  cpf       String
  empresa   String
  solicitante String
  createdAt DateTime @default(now())
  updatedAt    DateTime? @updatedAt
  observacao   String?
}

